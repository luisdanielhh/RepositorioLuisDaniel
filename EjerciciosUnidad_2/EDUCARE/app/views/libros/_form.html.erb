    <%= f.label :editorial_id %><br>
    <%= collection_select(:libro, :editorial_id, @editorials, :id, :editorial_name, prompt: true) %>
  </div>
  <div class="field">
    <%= f.label :genero_id %><br>
    <%= collection_select(:libro, :genero_id, @generos, :id, :genero_name, prompt: true) %>
  </div>
  <div class="field">
    <%= f.label :num_ejemplar %><br>
    <%= f.number_field :num_ejemplar %>
  </div>
  <div class="field">
    <%= f.label :reseña %><br>
    <%= f.text_area :reseña %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
